<Window x:Class="CodeEditor.Views.PluginManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:CodeEditor.ViewModels"
        Title="PluginManager" Height="300" Width="300">
    <Window.Resources>
        <vm:PluginManagerVm x:Key="PluginManagerVm"></vm:PluginManagerVm>
    </Window.Resources>
    <Grid DataContext="{DynamicResource PluginManagerVm}">
        <ListView Margin="8" Height="auto" Width="auto" ItemsSource="{Binding plugins}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Plugins" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
